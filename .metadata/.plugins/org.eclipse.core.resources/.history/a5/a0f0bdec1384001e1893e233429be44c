app.controller('LoginController', function($scope, $http, $window) {
  $scope.login = function() {
    var credentials = {
      email: $scope.email,
      senha: $scope.senha
    };

    $http.post('/api/login', credentials)
      .then(function(response) {
        // Armazene o token de autenticação (se estiver sendo usado) no localStorage ou sessionStorage
        // Isso dependerá da sua escolha de implementação no back-end
        $window.localStorage.setItem('token', response.data.token);

        // Redirecione para a página principal ou faça outra ação necessária após o login
        $window.location.href = '/home';
      })
      .catch(function(error) {
        console.error('Erro no login:', error);
        // Exiba uma mensagem de erro ao usuário
      });
  };
});
