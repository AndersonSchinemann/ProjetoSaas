

 var app=angular.module('myLogin', []);
 
 app.controller('LoginController', function($scope, $http) {
                
                $scope.login = function() {
					alert("LOGIN")
                    var credentials = {
                        username: $scope.username,
                        password: $scope.password
                    };

                    $http.post('/api', credentials)
                        .then(function(response) {
                            // Lógica para lidar com a resposta do servidor após a autenticação
                            console.log(response.data);
                        })
                        .catch(function(error) {
                            // Lógica para lidar com erros de autenticação
                            console.error(error);
                        });
                };
  
});


app.controller('LoginController', function($scope, $http) {
    $scope.usuario = {};

    $scope.login = function() {
        // Aqui você pode enviar os dados para o backend (Spring Boot) usando $http.post
      $http.post('/api/login', $scope.usuario)
           .then(function(response) {
		        console.log(response.data);
		        // Exibir mensagem de sucesso
		        alert('Usuário cadastrado com sucesso!');
		        
		    })
		    .catch(function(error) {
		        console.log(error);
		        // Exibir mensagem de erro
		        alert('Erro ao cadastrar usuário.');
			});
	  
	};
});         